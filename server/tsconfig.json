{
  "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "module": "es2022",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "outDir": "./dist",
      "rootDir": "./src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}